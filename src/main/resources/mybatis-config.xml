        <mapper resource="sql/mapper/cfg/xmapper/HzCfg0ModelFeatureMapper.xml"/>
        <mapper resource="sql/mapper/cfg/xmapper/HzFcfgBomLvl1ListOperationMapper.xml"/>
        <!--项目-->
        <mapper resource="sql/mapper/project.xmapper/HzSuperMaterielMapper.xml"/>
